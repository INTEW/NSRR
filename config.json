{
    "name": "NSRR-Pytorch",
    "n_gpu": 1,

    "arch": {
        "type": "NSRRModel",
        "args": {}
    },
    "data_loader": {
        "type": "NSRRDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 6,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 0,
            "view_dirname": "View/",
            "depth_dirname": "Depth/",
            "flow_dirname": "Motion/",
            "downscale_factor" : 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nsrr_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
